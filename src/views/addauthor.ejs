  <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="collapsibleNavbar">
    <ul class="navbar-nav">
        <% for(i=0;i<nav.length;i++){%>
            <li class="navitem">
              <a class="nav-link" href="<%=nav[i].link%>" style="font-weight: bolder;color: rgb(255, 255, 255);font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;"><i><%=nav[i].name%></i></a>
            </li>
        <%}%>
    </ul>
  </div>  
  </nav>
  <!-- end of navbar -->

  <!-- start of upperbar -->
  <div id="library">  
    <div class="container">
    <div class="row">
      <h1 style="font-family:fantasy;"><%=title%></h1>
    </div> 
    </div>
    <!-- end of sidebar -->

    <!-- start of overlapping segment -->
    <div class="container">
    <div class="row">
    <div class="col-sm-12" style="background-color: black;">
    <div class="overlap" style="background-color:rgb(0, 0, 0) "></div>
    </div>
    </div> 
    </div>
    <!-- end of overlapping segment -->
  </div>
  <!-- end of upperbar -->

  <!-- start of overlapping container -->
  <div class="container">
    <div class="row">
    <div class="col-sm-12"> 
    <div class="panel" style="background-color: rgb(0, 0, 0) ">
    <div>
        <!-- start of form container -->
<div class="container-fluid bg">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12"></div>
      <div class="col-md-4 col-sm-4 col-xs-12">
            <form class="form-container" style="border: 5px solid black; padding: 30px 35px; margin-top: 10vh; margin-bottom:10vh; background-color:rgb(0, 0, 0);" action ="" onsubmit="return validate()">
            <h2 style="text-align: center; color: rgb(191, 209, 28); font-weight: lighter;"><i><%=head%></i></h2>
            <div class="form-group">
            <label id="error1"></label>
            <br>
            <input type="text" class="form-control" id="author" placeholder="Enter Author Name " style="border:3px solid rgb(255, 210, 9)" autocomplete="off">
            </div>
            <div class="form-group">
            <label for="error2" id="error2"></label>
            <br>
            <input type="text" class="form-control" id="book" placeholder=" Add a notable book " style="border:3px solid rgb(255, 210, 9)" autocomplete="off">
            </div>

            <div class="form-group">
            <label for="error3" id="error3"></label>
            <br>
            <input type="text" class="form-control" id="genre" placeholder="Enter Genre  " style="border:3px solid rgb(255, 210, 9)" autocomplete="off">
            </div>

            <div class="form-group">
            <label for="error4" id="error4"></label>
            <br>
            <input type="file"name="input1" id="input" onchange="show()"accept="image/*">
            <br>
            <br>
            <img id="image" style="width: 260px; height: 260px; border-radius: 5em solid black;">
            </div>
            
            <button id="btn" style="margin-top: 2px;margin-left: 80px;border-radius:5em;background-color:rgb(240, 241, 154);color:  black;font-weight: bold; padding: 8px; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;" value="submit"><%=button%></button>
            </form> 
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12"></div>
    </div>
  </div>
  <!-- end of form container -->
  </div>
  </div>
  </div>
  </div>
  </div>
   <!-- end of overlapping container  -->
    
  
