  <!-- start of upperbar -->
  <div id="library">  
    <div class="container">
    <div class="row">
      <h1 style="font-family:fantasy;"><%=title%></h1>
    </div> 
    </div>
    <!-- end of sidebar -->

    <!-- start of overlapping segment -->
    <div class="container">
    <div class="row">
    <div class="col-sm-12" style="background-color: black;">
    <div class="overlap" style="background-color:rgb(250, 17, 17) "></div>
    </div>
    </div> 
    </div>
    <!-- end of overlapping segment -->
  </div>
  <!-- end of upperbar -->

  <!-- start of overlapping container -->
  <div class="container">
    <div class="row">
    <div class="col-sm-12"> 
    <div class="panel" style="background-color: rgb(110, 3, 3) ">
    <div>
        <!-- start of form container -->
          <div class="container-fluid bg">
            <div class="row">
              <div class="col-md-4 col-sm-4 col-xs-12"></div>
              <div class="col-md-4 col-sm-4 col-xs-12">
                    <form class="form-container" style="border: 5px solid black; padding: 30px 35px; margin-top: 10vh; margin-bottom:10vh; background-color:rgb(0, 0, 0);border-radius: 2em;" action="<%=action%>" onsubmit="return validate()">
                    <h2 style="text-align: center; color: rgb(248, 233, 23); font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-weight: bolder;"><i><%=head%></i></h2>
                    <div class="form-group">
                    <label id="error1"></label>
                    <input type="email" class="form-control" id="email" placeholder="Enter EmailID *" style="border:3px solid rgb(66, 194, 40)" autocomplete="off">
                    </div>
                    <div class="form-group"> 
                    <label for="password"></label>
                    <input type="password" class="form-control" id="password" placeholder="Enter Password * " style="border:3px solid rgb(66, 194, 40)"autocomplete="off">
                    <label for="error2" id="error2"></label>
                    <br>
                    <input type="checkbox"  onclick="myfunction()"> Show Password
                    </div> 
                    <button id="btn" style="margin-top: 2px;margin-left: 90px;background-color:rgb(70, 172, 190);color:  rgb(0, 0, 0);font-weight: bold; padding: 8px; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; border-radius: 2em;border-style: groove;" value="submit"><%=button%></button>
                    </form> 
              </div>
              <div class="col-md-4 col-sm-4 col-xs-12"></div>
            </div>
          </div>
          <!-- end of form container -->
  </div>
  </div>
  </div>
  </div>
  </div>
   <!-- end of overlapping container  -->
    
