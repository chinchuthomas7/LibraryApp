  <!-- start of navbar -->
  <nav class="navbar navbar-expand-md navbar-dark fixed-top" style="background-color: rgb(90, 5, 5);">
    <a class="navbar-brand" href="/" style="margin-left: 100px; color: rgb(255, 255, 255); font-weight: bolder;font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;"><i>HOME</i></a>
