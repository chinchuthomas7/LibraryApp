  <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="collapsibleNavbar">
    <ul class="navbar-nav">
        <% for(i=0;i<nav.length;i++){%>
            <li class="navitem">
              <a class="nav-link" href="<%=nav[i].link%>" style="font-weight: bolder;color: rgb(252, 240, 240);font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;"><i><%=nav[i].name%></i></a>
            </li>
        <%}%>
    </ul>
  </div>  
  </nav>
